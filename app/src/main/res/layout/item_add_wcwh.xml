<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/common_padding" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/hw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="货物名称:"
                android:textColor="@color/black"
                android:textSize="@dimen/common_text_15" />

            <TextView
                android:id="@+id/hwmc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_padding5"
                android:layout_toRightOf="@+id/hw"
                android:text=""
                android:textColor="@color/text_666666"
                android:textSize="@dimen/common_text_15" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:id="@+id/hwID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="货物ID:"
                android:textColor="@color/black"
                android:textSize="@dimen/common_text_15" />

            <TextView
                android:id="@+id/hwId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_padding5"
                android:layout_toRightOf="@+id/hwID"
                android:text=""
                android:textColor="@color/text_666666"
                android:textSize="@dimen/common_text_15" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/sl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="数量:"
                android:textColor="@color/black"
                android:textSize="@dimen/common_text_15" />

            <TextView
                android:id="@+id/hwsl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_padding5"
                android:layout_toRightOf="@+id/sl"
                android:text="123234"
                android:textColor="@color/text_666666"
                android:textSize="@dimen/common_text_15" />
        </RelativeLayout>
    </LinearLayout>

    <com.kingteller.client.view.KingTellerEditText
        xmlns:aaron="http://schemas.android.com/apk/res/com.kingteller"
        android:id="@+id/jqbm"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_button_height"
        aaron:fieldName="jqbm"
        aaron:fieldRequested="true"
        aaron:fieldTextSize="15"
        aaron:fieldTitle="机器编码："
        aaron:fieldType="String"
        android:background="@color/white"
        android:paddingLeft="@dimen/common_padding"
        android:paddingRight="@dimen/common_padding" />

</LinearLayout>