<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_margin"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="物料编码："
                android:textColor="@color/text_666666"
                android:textSize="@dimen/common_text_small" />

            <TextView
                android:id="@+id/qr_smjl_wlbm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textView1"
                android:textColor="@color/text_666666"
                android:textSize="@dimen/common_text_small" />

            <TextView
                android:id="@+id/qr_smjl_xz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="新增"
                android:textColor="#EE7600"
                android:textSize="@dimen/common_text_small" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="物料名称："
                android:textColor="@color/text_666666"
                android:textSize="@dimen/common_text_small" />

            <TextView
                android:id="@+id/qr_smjl_wlmc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textView2"
                android:textColor="@color/text_666666"
                android:textSize="@dimen/common_text_small" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/qr_top_tmbh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="条码编号："
                android:textColor="@color/text_666666"
                android:textSize="@dimen/common_text_small" />

            <TextView
                android:id="@+id/qr_smjl_tmbh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/TextView02"
                android:textColor="@color/text_666666"
                android:textSize="@dimen/common_text_small" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/qr_top_sitms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/qr_top_little_sl"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="数量："
                    android:textColor="@color/text_666666"
                    android:textSize="@dimen/common_text_small" />

                <TextView
                    android:id="@+id/qr_smjl_sl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/textView3"
                    android:textColor="@color/text_666666"
                    android:textSize="@dimen/common_text_small" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/qr_top_little_yms"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="有条码数："
                    android:textColor="@color/text_666666"
                    android:textSize="@dimen/common_text_small" />

                <TextView
                    android:id="@+id/qr_smjl_ytms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/textView4"
                    android:textColor="@color/text_666666"
                    android:textSize="@dimen/common_text_small" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/qr_top_little_mms"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="没条码数："
                    android:textColor="@color/text_666666"
                    android:textSize="@dimen/common_text_small" />

                <TextView
                    android:id="@+id/qr_smjl_mtms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/TextView01"
                    android:textColor="@color/text_666666"
                    android:textSize="@dimen/common_text_small" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.6dp"
        android:background="@color/divider_gray" />

</LinearLayout>
