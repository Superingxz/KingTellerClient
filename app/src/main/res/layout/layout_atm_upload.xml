<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/common_all_background"
    android:gravity="center"
    android:orientation="vertical" >
    
    <include layout="@layout/common_title_main_bar" />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <include layout="@layout/common_all_list_view" android:layout_above="@+id/layout_atm_upload_btn"
                 android:layout_width="match_parent" android:layout_height="match_parent"/>
        
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_alignParentBottom="true"
            android:id="@+id/layout_atm_upload_btn" android:background="@color/color_8"
            android:gravity="center">

            <Button
                android:id="@+id/layout_atm_upload_btn_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_red_bg"
                android:minHeight="@null"
                android:minWidth="@null"
                android:padding="5dp"
                android:text="删除"
                android:textColor="@color/color_8" />

            <Button
                android:id="@+id/layout_atm_upload_btn_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_orange_bg"
                android:minHeight="@null"
                android:minWidth="@null"
                android:padding="5dp"
                android:text="全选"
                android:textColor="@color/color_8" />

            <Button
                android:id="@+id/layout_atm_upload_btn_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_green_bg"
                android:minHeight="@null"
                android:minWidth="@null"
                android:padding="5dp"
                android:text="上传"
                android:textColor="@color/color_8" />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>