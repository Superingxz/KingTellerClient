<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_setup_bg"
    android:orientation="vertical"  >

    <TextView
        android:id="@+id/edit_xysjedit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp"
        android:text="请修改内容"
        android:textColor="#61AEDC"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp" >

        <EditText
            android:id="@+id/edit_xysjedit_xysj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/textView1"
            android:background="@drawable/btn_edittext_bg"
            android:ems="10"
            android:hint="请输入小时数"
            android:inputType="numberDecimal"
            android:textCursorDrawable="@drawable/cursor_set_black"
            android:textSize="16sp" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="标准响应时间："
            android:textColor="@color/common_right_edittext_textcolor"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:visibility="gone" >

        <EditText
            android:id="@+id/edit_xysjedit_whsj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/TextView01"
            android:background="@drawable/btn_edittext_bg"
            android:ems="10"
            android:hint="请输入维护时间"
            android:inputType="numberDecimal"
            android:textCursorDrawable="@drawable/cursor_set_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="维护时间："
            android:textColor="@color/common_right_edittext_textcolor"
            android:textSize="16sp" />

    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="15dp"
        android:background="#DCDCDC" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btn_xysjedit_cancel"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@null"
            android:minHeight="@null"
            android:minWidth="@null"
            android:text="取消"
            android:textColor="#383838"
            android:textSize="16sp" />

        <View
            android:id="@+id/View01"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#DCDCDC" />

        <Button
            android:id="@+id/btn_xysjedit_confirm"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@null"
            android:minHeight="@null"
            android:minWidth="@null"
            android:text="确定"
            android:textColor="#383838"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>