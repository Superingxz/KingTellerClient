<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="60dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/main_bottom_bar_remind"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/main_bottom_bar_remind_small">

                <ImageView
                    android:id="@+id/main_bottom_bar_remind_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/img_main_remind" />

                <TextView
                    android:id="@+id/main_bottom_bar_remind_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_remind"
                    android:textColor="@color/main_bottom_color_nomal"
                    android:textSize="12sp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/main_bottom_bar_remind_iv"/>

                <TextView
                    android:id="@+id/main_bottom_bar_remind_corner"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignRight="@+id/main_bottom_bar_remind_iv"
                    android:layout_alignTop="@+id/main_bottom_bar_remind_iv"
                    android:background="@drawable/ic_main_corner"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_bottom_bar_bench"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <RelativeLayout
                android:id="@+id/main_bottom_bar_bench_small"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/main_bottom_bar_bench_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_main_bench"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/main_bottom_bar_bench_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_bench"
                    android:textColor="@color/main_bottom_color_nomal"
                    android:textSize="12sp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/main_bottom_bar_bench_iv"/>

                <TextView
                    android:id="@+id/main_bottom_bar_bench_corner"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignRight="@+id/main_bottom_bar_bench_iv"
                    android:layout_alignTop="@+id/main_bottom_bar_bench_iv"
                    android:background="@drawable/ic_main_corner"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_bottom_bar_setting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <RelativeLayout
                android:id="@+id/main_bottom_bar_setting_small"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/main_bottom_bar_setting_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_main_setting"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/main_bottom_bar_setting_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_setup"
                    android:textColor="@color/main_bottom_color_nomal"
                    android:textSize="12sp"
                    android:layout_below="@+id/main_bottom_bar_setting_iv"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/main_bottom_bar_setting_corner"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignRight="@+id/main_bottom_bar_setting_iv"
                    android:layout_alignTop="@+id/main_bottom_bar_setting_iv"
                    android:background="@drawable/ic_main_corner"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

