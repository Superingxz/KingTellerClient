    <style name="XTheme" parent="@android:style/Theme">
        <item name="android:windowBackground">@color/transparent_background</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleSize">@dimen/common_window_title_high</item>
        <item name="android:windowTitleBackgroundStyle">@null</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="YTheme" parent="@android:style/Theme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

   

    <style name="PickDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="ATMSearchDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="common_checkbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/btn_checkbox</item>
    </style>
    
    <style name="common_checkbox_two" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/btn_checkbox_two</item>
    </style>
    
    <style name="checkbox_checked" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_bg</item>
    </style>

    <style name="common_radiobutton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/common_radiobutton_bg</item>
    </style>

    <style name="main_menu_animstyle">
        <item name="android:windowEnterAnimation">@anim/dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_out_anim</item>
    </style>
    
    <style name="common_dialog_bottom_animstyle">
        <item name="android:windowEnterAnimation">@anim/dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_out_anim</item>
    </style>

    <style name="transparentFrameWindowStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/choose_bg</item>
    </style>

    <style name="SDL" />

    <style name="SDL.Dialog" parent="android:Theme">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="@android:windowActionBar">false</item>
        <item name="@android:windowActionModeOverlay">true</item>
        <item name="@android:windowCloseOnTouchOutside">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="sdlTitleTextStyle">@style/SDL.TextView.Title</item>
        <item name="sdlMessageTextStyle">@style/SDL.TextView.Message</item>
        <item name="sdlDialogStyle">@style/DialogStyleLight</item>
    </style>

    <style name="DialogStyleLight">
        <item name="dialogBackground">@drawable/sdl_background</item>
        <item name="titleTextColor">@color/sdl_title_text</item>
        <item name="titleSeparatorColor">@color/sdl_title_separator</item>
        <item name="messageTextColor">@color/sdl_message_text</item>
        <item name="buttonTextColor">@color/sdl_button_text</item>
        <item name="buttonSeparatorColor">@color/sdl_button_separator</item>
        <item name="buttonBackgroundColorNormal">@color/sdl_button_normal</item>
        <item name="buttonBackgroundColorPressed">@color/sdl_button_pressed</item>
        <item name="buttonBackgroundColorFocused">@color/sdl_button_focused</item>
    </style>

    <style name="SDL.Group">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SDL.Group.ButtonPanel">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SDL.Group.Content">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SDL.Group.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="SDL.Group.Horizontal.ButtonPanel">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SDL.Group.Wrap">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="SDL.HorizontalSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="SDL.ButtonSeparator">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="SDL.TitleSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="SDL.Button" parent="@android:style/Widget.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">64dip</item>
        <item name="android:paddingLeft">4dip</item>
        <item name="android:paddingRight">4dip</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="SDL.DatePicker">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="@android:spinnersShown">true</item>
        <item name="@android:calendarViewShown">false</item>
    </style>

    <style name="SDL.ListView" parent="@android:style/Widget.ListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:cacheColorHint">@null</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:divider">@color/color_dddddd</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:fastScrollEnabled">true</item>
    </style>

    <style name="SDL.TextView" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SDL.TextView.Message">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="SDL.TextView.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="SDL.Progress" parent="@android:style/Widget.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>
    <!-- 文件选择 -->
    <style name="fileChooserName">
        <item name="android:layout_marginLeft">@dimen/list_item_padding</item>
        <item name="android:layout_marginRight">@dimen/list_item_padding</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="fileChooserIcon">
        <item name="android:layout_marginLeft">@dimen/list_item_padding</item>
    </style>
    
    
    <!-- 日历年月 -->
    <style name="TextAppearance.MaterialCalendarWidget.Header"
        parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 日历周日 -->
    <style name="TextAppearance.MaterialCalendarWidget.WeekDay"
        parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/common_all_color_blue</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <!-- 日历天-->
    <style name="TextAppearance.MaterialCalendarWidget.Date"
        parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@drawable/mcv_text_date_light</item>
    </style>



</resources>