<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_attendance_audit_ldyj_common"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone" >
    
    <com.kingteller.client.view.groupview.listview.OverTimePeopleGroupListView
        android:id="@+id/ldyj_group_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/oa_aduit_spyj_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_layout_off_bg"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/TextView03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="您的审批意见："
                android:textColor="@color/common_right_edittext_textcolor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/attendance_audit_csy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/btn_text_select"
                android:gravity="center"
                android:text="请选择常用批示语"
                android:textColor="@color/common_left_edittext_textcolor"
                android:textSize="14sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/attendance_audit_yj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/btn_edittext_bg"
            android:ems="10"
            android:gravity="left|top"
            android:hint="请输入您的审批意见"
            android:minLines="3"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/cursor_set_black"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>