<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_margin"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_padding"
        android:layout_marginTop="@dimen/common_margin"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/qr_top_tmbm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="物料编码："
                android:textColor="@color/text_666666"
                android:textSize="@dimen/common_text_small" />

            <TextView
                android:id="@+id/djmx_wlbm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textView1"
                android:textColor="@color/text_666666"
                android:textSize="@dimen/common_text_small" />

            <TextView
                android:id="@+id/djmx_xz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="新增"
                android:textColor="#008B00"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/qr_top_tmmc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="物料名称："
                android:textColor="@color/text_666666"
                android:textSize="@dimen/common_text_small" />

            <TextView
                android:id="@+id/djmx_wlmc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textView2"
                android:textColor="@color/text_666666"
                android:textSize="@dimen/common_text_small" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/qr_top_tmbh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="物料条码："
                android:textColor="@color/text_666666"
                android:textSize="@dimen/common_text_small" />

            <TextView
                android:id="@+id/djmx_tmbh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/common_margin"
                android:layout_toLeftOf="@+id/djmx_sc"
                android:layout_toRightOf="@+id/TextView02"
                android:textColor="@color/text_666666"
                android:textSize="@dimen/common_text_small" />

            <TextView
                android:id="@+id/djmx_sc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="删除"
                android:textColor="#FF0000"
                android:textSize="14sp"
                android:visibility="visible" />

        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.6dp"
        android:background="@color/divider_gray" />

</LinearLayout>