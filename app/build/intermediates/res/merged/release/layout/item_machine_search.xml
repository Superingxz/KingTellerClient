<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_layout_off_bg"
    android:padding="5dp" >

    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_toRightOf="@+id/checkBox"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/relativelayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/common_margin"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/atmhao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_margin"
                android:text="ATM号:"
                android:textColor="@color/text_666666"
                android:textSize="@dimen/common_text_small" />

            <TextView
                android:id="@+id/atmh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_padding"
                android:layout_toRightOf="@+id/atmhao"
                android:textColor="@color/black"
                android:textSize="@dimen/common_text_small" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativelayout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativelayout1"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginTop="@dimen/common_margin"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/machineId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_margin"
                android:text="机器编号:"
                android:textColor="@color/text_666666"
                android:textSize="@dimen/common_text_small" />

            <TextView
                android:id="@+id/jqbh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_padding"
                android:layout_toRightOf="@+id/machineId"
                android:textColor="@color/black"
                android:textSize="@dimen/common_text_small" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativelayout3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativelayout2"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginTop="@dimen/common_margin"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/ssyhang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_margin"
                android:text="所属银行:"
                android:textColor="@color/text_666666"
                android:textSize="@dimen/common_text_small" />

            <TextView
                android:id="@+id/ssyh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_padding"
                android:layout_toRightOf="@+id/ssyhang"
                android:textColor="@color/black"
                android:textSize="@dimen/common_text_small" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativelayout4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativelayout3"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginTop="@dimen/common_margin" >

            <TextView
                android:id="@+id/wdsb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_margin"
                android:text="网点设备简称:"
                android:textColor="@color/text_666666"
                android:textSize="@dimen/common_text_small" />

            <TextView
                android:id="@+id/wdsbjc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/common_padding"
                android:layout_toRightOf="@+id/wdsb"
                android:textColor="@color/black"
                android:textSize="@dimen/common_text_small" />
        </RelativeLayout>
    </RelativeLayout>

    <CheckBox
        android:id="@+id/checkBox"
        style="@style/common_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:checked="false" />

</RelativeLayout>
