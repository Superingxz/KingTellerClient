<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    android:padding="@dimen/common_padding" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_padding5"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/sjpaper_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin"
            android:text="试卷编码:"
            android:textColor="@color/text_666666"
            android:textSize="@dimen/common_text_13" />

        <TextView
            android:id="@+id/sjpaper_code_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_padding"
            android:layout_toRightOf="@+id/sjpaper_code"
            android:textColor="@color/black"
            android:textSize="@dimen/common_text_13" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_padding5"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/sjpaper_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin"
            android:text="试卷标题:"
            android:textColor="@color/text_666666"
            android:textSize="@dimen/common_text_13" />

        <TextView
            android:id="@+id/sjpaper_content_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_padding"
            android:layout_toRightOf="@+id/sjpaper_content"
            android:textColor="@color/black"
            android:textSize="@dimen/common_text_13" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_padding5"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/sjpaper_timeLong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin"
            android:text="试卷考核时长:"
            android:textColor="@color/text_666666"
            android:textSize="@dimen/common_text_13" />

        <TextView
            android:id="@+id/sjpaper_timeLong_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_padding"
            android:layout_toRightOf="@+id/sjpaper_timeLong"
            android:textColor="@color/black"
            android:textSize="@dimen/common_text_13" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_padding5"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/sjpaper_answerDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin"
            android:text="考核截止时间:"
            android:textColor="@color/text_666666"
            android:textSize="@dimen/common_text_13" />

        <TextView
            android:id="@+id/sjpaper_answerDate_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_padding"
            android:layout_toRightOf="@+id/sjpaper_answerDate"
            android:textColor="@color/black"
            android:textSize="@dimen/common_text_13" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.6dp"
        android:layout_marginTop="@dimen/common_margin"
        android:background="@color/divider_gray" />

</LinearLayout>