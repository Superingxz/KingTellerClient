<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/common_all_background"
    android:gravity="center"
    android:orientation="vertical">
    
	<include layout="@layout/common_title_main_bar" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp" >

            <ImageView
                android:id="@+id/aboutus_img_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:contentDescription="@null"
                android:src="@drawable/ic_aboutus" />

            <TextView
                android:id="@+id/aboutus_text_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/aboutus_img_one"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="御银云管理平台"
                android:textColor="#656565"
                android:textSize="16sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/aboutus_text_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_versions"
                android:textColor="#989898"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/aboutus_text_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/app_companyname"
                android:textColor="#989898"
                android:textSize="14sp" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>