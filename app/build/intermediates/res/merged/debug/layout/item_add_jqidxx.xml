<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp" >

        <TextView
            android:id="@+id/xmId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_left_edittext_textcolor"
            android:textSize="@dimen/common_item_text_size_left"
            android:visibility="gone" />

        <TextView
            android:id="@+id/type1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_left_edittext_textcolor"
            android:textSize="@dimen/common_item_text_size_left" />

        <TextView
            android:id="@+id/typeName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/type1"
            android:textColor="@color/common_mark_edittext_textcolor_blue"
            android:textSize="@dimen/common_item_text_size_left" />

        <TextView
            android:id="@+id/content1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/typeName1"
            android:ellipsize="end"
            android:maxEms="10"
            android:singleLine="true"
            android:textColor="@color/common_right_edittext_textcolor"
            android:textSize="@dimen/common_item_text_size_right" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:paddingTop="@dimen/common_padding" >

        <com.kingteller.client.view.KingTellerEditText
            xmlns:aaron="http://schemas.android.com/apk/res/com.kingteller"
            android:id="@+id/choose1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            aaron:fieldName="choose"
            aaron:fieldTitle="操作:"
            aaron:fieldType="Select" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxEms="10"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/common_text_14" >
        </EditText>
    </LinearLayout>

</LinearLayout>