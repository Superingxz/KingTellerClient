<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/item_add_pic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/compose_pic_add"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="名称"
                android:textColor="@color/common_right_edittext_textcolor"
                android:textSize="14sp" />

            <ProgressBar
                android:id="@+id/item_jdbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_name"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <TextView
                android:id="@+id/item_bfb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/item_jdbar"
                android:layout_below="@+id/item_jdbar"
                android:layout_marginTop="5dp"
                android:text="0%"
                android:textColor="@color/common_left_edittext_textcolor"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_iscg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/item_jdbar"
                android:layout_below="@+id/item_jdbar"
                android:layout_marginTop="5dp"
                android:text="未上传"
                android:textColor="@color/common_left_edittext_textcolor"
                android:textSize="12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" >

            <Button
                android:id="@+id/item_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="@drawable/ic_play_pressed"
                android:minHeight="@null"
                android:minWidth="@null"
                android:visibility="visible" />

            <Button
                android:id="@+id/item_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_play"
                android:layout_marginTop="5dp"
                android:background="@drawable/btn_delete_layout"
                android:minHeight="@null"
                android:minWidth="@null"
                android:visibility="visible" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>