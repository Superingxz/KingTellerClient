<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/common_all_background"
    android:orientation="vertical" >
    
    <include layout="@layout/common_title_main_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/fwz_dw_ssname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="所属服务站"
            android:textColor="@color/common_mark_edittext_textcolor_blue"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="所属服务站位置："
            android:textColor="@color/common_left_edittext_textcolor"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/LinearLayout03"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_layout_off_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/common_padding5" >

            <TextView
                android:id="@+id/fwz_dw_ssjd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="经度："
                android:textColor="@color/common_right_edittext_textcolor"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout02"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_layout_off_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/common_padding5" >

            <TextView
                android:id="@+id/fwz_dw_sswd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="纬度："
                android:textColor="@color/common_right_edittext_textcolor"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout01"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_layout_off_bg"
            android:orientation="horizontal"
            android:padding="@dimen/common_padding5" >

            <TextView
                android:id="@+id/TextView06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="所属位置："
                android:textColor="@color/common_right_edittext_textcolor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/fwz_dw_ssdz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/common_right_edittext_textcolor"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/TextView04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="当前位置："
            android:textColor="@color/common_left_edittext_textcolor"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/layout_fwz_dw_dqdz"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_layout_on_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/common_padding5" >

            <TextView
                android:id="@+id/fwz_dw_dqdz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_mobilelocation_marker"
                android:gravity="center_vertical"
                android:text="当前位置"
                android:textColor="@color/common_right_edittext_textcolor"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_fwz_dw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/btn_green_bg"
        android:minHeight="@null"
        android:minWidth="@null"
        android:padding="8dp"
        android:text="设置当前位置为服务站位置"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>
