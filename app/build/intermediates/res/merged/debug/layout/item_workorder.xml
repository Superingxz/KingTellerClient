<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_layout_off_bg"
    android:orientation="vertical"
    android:padding="5dp" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal" >
        
        <TextView
            android:id="@+id/work_order_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="工单单号:"
            android:textColor="@color/common_left_edittext_textcolor"
            android:textSize="@dimen/common_item_text_size_left" />

        <TextView
            android:id="@+id/orderNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/work_order_no"
            android:textColor="@color/common_right_edittext_textcolor"
            android:textSize="@dimen/common_item_text_size_right" />
        
        <TextView
            android:id="@+id/orderType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:textColor="@color/common_mark_edittext_textcolor_orange"
            android:textSize="@dimen/common_item_text_size_mark" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/atm_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="机器信息:"
            android:textColor="@color/common_left_edittext_textcolor"
            android:textSize="@dimen/common_item_text_size_left" />

       <!--  <TextView
            android:id="@+id/atmMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_toRightOf="@+id/atm_msg"
            android:textColor="@color/text_666666"
            android:textSize="@dimen/common_text_13" /> -->

        <Button
            android:id="@+id/atmMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/atm_msg"
            android:background="@null"
            android:minHeight="@null"
            android:minWidth="@null"
            android:textColor="@color/common_mark_edittext_textcolor_greed"
            android:textSize="@dimen/common_item_text_size_right" />
        
        <TextView
            android:id="@+id/backflag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="[退回]"
            android:textColor="@color/common_mark_edittext_textcolor_blue"
            android:textSize="@dimen/common_item_text_size_mark"
            android:visibility="gone" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="网点设备简称:"
            android:textColor="@color/common_left_edittext_textcolor"
            android:textSize="@dimen/common_item_text_size_left" />

        <TextView
            android:id="@+id/wdsbjc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/common_right_edittext_textcolor"
            android:textSize="@dimen/common_item_text_size_right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="任务信息:"
            android:textColor="@color/common_left_edittext_textcolor"
            android:textSize="@dimen/common_item_text_size_left" />

        <TextView
            android:id="@+id/troubleRemark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/common_right_edittext_textcolor"
            android:textSize="@dimen/common_item_text_size_right" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp" >

        <TextView
            android:id="@+id/assign_man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="派单人:"
            android:textColor="@color/common_left_edittext_textcolor"
            android:textSize="@dimen/common_item_text_size_left" />

        <TextView
            android:id="@+id/assignName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/assign_man"
            android:textColor="@color/common_right_edittext_textcolor"
            android:textSize="@dimen/common_item_text_size_right" />

        <TextView
            android:id="@+id/assignTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/common_right_edittext_textcolor"
            android:textSize="@dimen/common_item_text_size_right" />

    </RelativeLayout>
    
       <LinearLayout
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="5dp"
           android:layout_marginRight="5dp"
           android:layout_marginTop="5dp"
           android:orientation="horizontal"
           android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="进度:"
            android:textColor="@color/common_left_edittext_textcolor"
            android:textSize="@dimen/common_item_text_size_left" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/common_right_edittext_textcolor"
            android:textSize="@dimen/common_item_text_size_right" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预约时间:"
            android:textColor="@color/common_mark_edittext_textcolor_blue"
            android:textSize="@dimen/common_item_text_size_left" />

        <TextView
            android:id="@+id/prearrangeDateStr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/blue"
            android:textSize="@dimen/common_item_text_size_left" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/acceptMalf"
                android:layout_width="@dimen/common_btn_width"
                android:layout_height="@dimen/common_btn_height"
                android:layout_margin="5dp"
                android:background="@drawable/btn_green_bg"
                android:minHeight="@null"
                android:minWidth="@null"
                android:text="接障"
                android:textColor="@color/white"
                android:textSize="@dimen/common_item_text_size_btn"
                android:visibility="gone" />

            <Button
                android:id="@+id/fillReport"
                android:layout_width="@dimen/common_btn_width"
                android:layout_height="@dimen/common_btn_height"
                android:layout_margin="5dp"
                android:background="@drawable/btn_green_bg"
                android:minHeight="@null"
                android:minWidth="@null"
                android:text="填写报告"
                android:textColor="@color/white"
                android:textSize="@dimen/common_item_text_size_btn"
                android:visibility="gone" />

        </LinearLayout>

        <Button
            android:id="@+id/machineScan"
            android:layout_width="@dimen/common_btn_width"
            android:layout_height="@dimen/common_btn_height"
            android:layout_margin="5dp"
            android:background="@drawable/btn_red_bg"
            android:minHeight="@null"
            android:minWidth="@null"
            android:text="二维码录入"
            android:textColor="@color/white"
            android:textSize="@dimen/common_item_text_size_btn"
            android:visibility="gone" />

        <Button
            android:id="@+id/dotmachine"
            android:layout_width="@dimen/common_btn_width"
            android:layout_height="@dimen/common_btn_height"
            android:layout_margin="5dp"
            android:background="@drawable/btn_orange_bg"
            android:minHeight="@null"
            android:minWidth="@null"
            android:text="部件更换扫描"
            android:textColor="@color/white"
            android:textSize="@dimen/common_item_text_size_btn"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <Button
            android:id="@+id/backMalf"
            android:layout_width="@dimen/common_btn_width"
            android:layout_height="@dimen/common_btn_height"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/btn_red_bg"
            android:minHeight="@null"
            android:minWidth="@null"
            android:text="退单"
            android:textColor="@color/white"
            android:textSize="@dimen/common_item_text_size_btn"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>