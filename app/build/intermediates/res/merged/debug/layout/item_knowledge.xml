<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/common_padding" 
    android:orientation="vertical"
    >
	<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white" >
	    <RelativeLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:background="@color/white" >
	
	        <TextView
	            android:id="@+id/item_error_code_title"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="@dimen/common_margin"
	            android:singleLine="true"
	            android:text="错误代码:"
	            android:layout_weight="1"
	            android:textColor="@color/black" />
	
	        <TextView
	            android:id="@+id/item_error_code"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="@dimen/common_margin"
	            android:singleLine="true"
	            android:text="1"
	           	android:layout_toRightOf="@+id/item_error_code_title"
	            android:textColor="@color/black" />
	    </RelativeLayout>
	</LinearLayout>
	<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white" >
	    <RelativeLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:background="@color/white" >
	
	        <TextView
	            android:id="@+id/item_component_title"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="@dimen/common_margin"
	            android:singleLine="true"
	            android:text="故障部件:"
	            android:layout_weight="1"
	            android:textColor="@color/black" />
	
	        <TextView
	            android:id="@+id/item_component"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="@dimen/common_margin"
	            android:singleLine="true"
	            android:text="1"
	           	android:layout_toRightOf="@+id/item_component_title"
	            android:textColor="@color/black" />
	    </RelativeLayout>
	</LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <TextView
            android:id="@+id/item_trouble_remark_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin"
            android:singleLine="true"
            android:text="表现症状:"
            
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/item_trouble_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin"
            android:singleLine="false"
            android:text="1"
            android:layout_toRightOf="@+id/item_trouble_remark_title"
            android:textColor="@color/black" />
    </RelativeLayout>	
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <TextView
            android:id="@+id/item_maintenance_remark_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin"
            android:singleLine="true"
            android:text="解决方案:"
            
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/item_maintenance_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_toRightOf="@+id/item_maintenance_remark_title"
            android:textColor="@color/black" />
    </RelativeLayout>



</LinearLayout>