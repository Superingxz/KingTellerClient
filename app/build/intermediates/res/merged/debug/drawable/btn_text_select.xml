<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 点击未UP -->
    <item android:state_pressed="true">
        <shape>
            <!-- 描边 -->
            <stroke 
                android:width="1dp" 
                android:color="#f0f0f0" />
            <!-- 圆角  按钮四个圆角       	radius:半径 -->
            <corners android:radius="5px" />
            
            <!-- 间隔 按钮文字和边缘距离(内边距) -->
            <padding 
                android:bottom="10dp" 
                android:left="5dp" 
                android:right="5dp" 
                android:top="10dp" />
            <!-- 填充 -->
			<solid
        		android:color="#BEf0f0f0"/>
        </shape>
    </item>
    
 	<!-- 点击 -->
    <item android:state_focused="true">
        <shape>
            <!-- 描边 -->
            <stroke 
                android:width="1dp" 
                android:color="#f0f0f0" />
            <!-- 圆角  按钮四个圆角       	radius:半径 -->
            <corners android:radius="5px" />
            
            <!-- 间隔 按钮文字和边缘距离(内边距) -->
            <padding 
                android:bottom="10dp" 
                android:left="5dp" 
                android:right="5dp" 
                android:top="10dp" />
            <!-- 填充 -->
			<solid
        		android:color="#BEf0f0f0"/>
        </shape>
	</item>
	
	<!-- 未点击 -->
    <item>
        <shape>
            <!-- 描边 -->
            <stroke 
                android:width="1dp" 
                android:color="#f0f0f0" />
            <!-- 圆角  按钮四个圆角       	radius:半径 -->
            <corners android:radius="5px" />
    
            <!-- 间隔 按钮文字和边缘距离(内边距) -->
            <padding 
                android:bottom="10dp" 
                android:left="5dp" 
                android:right="5dp" 
                android:top="10dp" />
           
        </shape>
    </item>
</selector>
